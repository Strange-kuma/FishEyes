{
  "root": true,

  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module",
    "parser": "babel-eslint"
  },

  "rules": {
    "eqeqeq": "warn",
    "indent": ["warn", 2, { "SwitchCase": 1 }],
    "multiline-ternary": ["warn", "always-multiline"]
  },
  "env": {
    "browser": true,
    "es6": true
  },
  "plugins": ["html"],
  "extends": ["eslint:recommended"]
}
